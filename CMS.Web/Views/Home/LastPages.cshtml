@using CMS.Core.Convertors
@model IEnumerable<CMS.DataLayer.Page>
<header>
    <i class="icons icon-doc-2"></i><h3> آخرین صفحات </h3>
</header>
<ul>
    @foreach (var item in Model)
    {
        <li>
            <img class="border-radius" src="/PageImage/@item.ImageName">
            <h2> <a href="/Pages/@item.PageID"> @item.Title </a></h2>
            <p>
                @item.ShortDescription
            </p>
            <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi() </span>
            <a href="/Pages/@item.PageID" class="more-link"><i class="icons icon-more"></i></a>
        </li>
    }
</ul>