@using CMS.Core.Convertors
@model IEnumerable<CMS.DataLayer.Page>
<header><i class="icons icon-star"></i> <h3> پر بازدیدترین صفحات </h3></header>
<ul>
    @foreach (var item in Model)
    {
        <li>
            <img class="border-radius" src="/PageImage/@item.ImageName">
            <h2> <a href="/Pages/@item.PageID">@item.Title</a></h2>
            <span>انتشار : @item.CreateDate.ToShamsi()</span>
        </li>
    }
</ul>
