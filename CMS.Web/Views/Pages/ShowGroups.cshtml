@model IEnumerable<CMS.Core.DTOs.ShowGroupViewModel>
<section class="category-section border-radius">
    <header><i class="fa fa-folder-open-o"></i> <h3> دسته بندی ها </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li><a href="/pages?categories=@item.GroupID"> @item.GroupTitle <span>@item.PageCount</span></a></li>
        }
    </ul>
</section>
